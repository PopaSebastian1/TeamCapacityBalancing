<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TeamCapacityBalancing.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TeamCapacityBalancing.Views.ResourcePage"
			 x:DataType="vm:ResourceViewModel"
			 >



	<Grid RowDefinitions="Auto * * * * * *" ColumnDefinitions="Auto *" Margin="10">
		<TextBlock Grid.Row="0" 
				   Text="Resources" 
				   FontSize="18" 
				   FontWeight="Bold"
				   Padding="0,0,0,20"
				   ></TextBlock>
		
       <TextBlock Grid.Row="1"
				  Text="Full Name"
				  ></TextBlock>
		
		<TextBlock Grid.Column="1"
				   Grid.Row="1"
				   Text="Antonio"
				   ></TextBlock>
		<ItemsRepeater Items="{Binding Days}" Margin="0, 10, 0, 0">
			<ItemsRepeater.Layout>
				<StackLayout Spacing="5" Orientation="Vertical" />
			</ItemsRepeater.Layout>
			<ItemsRepeater.ItemTemplate>
				<TextBlock Text="{Binding Days}"></TextBlock>
			</ItemsRepeater.ItemTemplate>
		</ItemsRepeater>
		
		<!--<StackPanel Grid.Row="2">
			<TextBlock
				  Text="Monday"
				  ></TextBlock>

			<TextBlock 
				  Text="Tuesday"
				  ></TextBlock>
		</StackPanel>-->
		
		
		
	</Grid>
	
</UserControl>
