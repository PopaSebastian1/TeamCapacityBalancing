<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:TeamCapacityBalancing.ViewModels"
             xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TeamCapacityBalancing.Views.BalancingPage"
			 x:DataType="vm:BalancingViewModel"
			 x:CompileBindings="True">

	<Design.DataContext>
		<vm:BalancingViewModel/>
	</Design.DataContext>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Orientation="Horizontal"
					HorizontalAlignment="Left" VerticalAlignment="Center"
					Margin="5">
			<ComboBox Width="300" Margin="5"/>
			<Button Width="40" Height="40" Background="Transparent">
				<icons:MaterialIcon Width="40" Height="40" Kind="Refresh"/>
			</Button>
			<Button Width="40" Height="40" Background="Transparent">
				<icons:MaterialIcon Width="40" Height="40" Kind="ContentSave"/>
			</Button>
			<Button Width="40" Height="40" Background="Transparent">
				<icons:MaterialIcon Width="40" Height="40" Kind="Calendar"/>
			</Button>

			<ToggleButton Height="40" Background="Turquoise"
						  HorizontalContentAlignment="Center"
						  VerticalContentAlignment="Center"
						  Content="Short-term">
			</ToggleButton>

		</StackPanel>

		<StackPanel Grid.Row="1" Orientation="Horizontal">

			<!--<TextBlock Text="Text"></TextBlock>-->

			<ItemsRepeater Items="{Binding Epics}">
				<ItemsRepeater.ItemTemplate>
					<DataTemplate>
						<Border Margin="0,10,0,0"
							Padding="5">
							<TextBlock Text="{Binding Name}"/>
						</Border>
					</DataTemplate>
				</ItemsRepeater.ItemTemplate>
			</ItemsRepeater>

		</StackPanel>
	</Grid>

</UserControl>
