<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:TeamCapacityBalancing.ViewModels"
			 xmlns:models="using:TeamCapacityBalancing.Models"
             xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TeamCapacityBalancing.Views.BalancingPage"
			 x:DataType="vm:BalancingViewModel"
			 x:CompileBindings="True"
			 >
	<UserControl.DataContext>
		<vm:BalancingViewModel/>
	</UserControl.DataContext>

	<!--<DataGrid Margin="20" ItemsSource="{Binding MyUserAssociation}"
		  GridLinesVisibility="All"
		  BorderThickness="1" BorderBrush="Gray">
		<DataGrid.Columns>
			<DataGridTextColumn Header="Story" Binding="{Binding StoryData.Name}"/>
			<DataGridCheckBoxColumn Header="Short-term" Binding="{Binding ShortTerm}"/>
			<DataGridTextColumn Header="Remaining" Binding="{Binding Remaining}"/>
			<DataGridTextColumn Header="Coverage" Binding="{Binding Coverage}"/>
		</DataGrid.Columns>
	</DataGrid>-->

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="8*"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Orientation="Horizontal">
			<ComboBox Width="300" Margin="5"/>
			<Button Width="40" Height="40" Background="Transparent">
				<icons:MaterialIcon Width="40" Height="40" Kind="Refresh"/>
			</Button>
			<Button Width="40" Height="40" Background="Transparent">
				<icons:MaterialIcon Width="40" Height="40" Kind="ContentSave"/>
			</Button>
			<Button Width="40" Height="40" Background="Transparent">
				<icons:MaterialIcon Width="40" Height="40" Kind="Calendar"/>
			</Button>
			<Button Width="40" Height="40" Background="Transparent">
				<icons:MaterialIcon Width="40" Height="40" Kind="People"/>
			</Button>

			<ToggleButton Height="40" Background="Turquoise"
						  HorizontalContentAlignment="Center"
						  VerticalContentAlignment="Center"
						  Content="Short-term"
						  >
			</ToggleButton>

		</StackPanel>
		<SplitView Grid.Row="1" Background="AntiqueWhite" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsPaneOpen="{Binding IsPaneOpen}" DisplayMode="{Binding Mode}">
			<SplitView.Pane>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="7*"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>

					<StackPanel Grid.Row="0" Margin="10">
						<Panel>
							<ToggleButton Name="MenuToggle" ToolTip.Tip="Toogle Menu" IsChecked="{Binding IsPaneOpen}" Background="Turquoise">
								<icons:MaterialIcon Kind="Menu"></icons:MaterialIcon>
							</ToggleButton>
							<TextBlock Text="Epics" IsVisible="{Binding IsPaneOpen}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
						</Panel>

						<ItemsRepeater Items="{Binding Epics}">
							<ItemsRepeater.ItemTemplate>
								<DataTemplate>
									<Border Margin="0,10,0,0" Padding="5">
										<TextBlock Text="{Binding Name}" IsVisible="{Binding #MenuToggle.IsChecked}"/>
									</Border>
								</DataTemplate>
							</ItemsRepeater.ItemTemplate>
						</ItemsRepeater>
					</StackPanel>

					<Border Grid.Row="1" BorderBrush="Black" BorderThickness="0,1,0,0" Margin="10,0,10,0" IsVisible="{Binding #MenuToggle.IsChecked}"/>

					<StackPanel Grid.Row="1" Orientation="Vertical">
						<CheckBox Content="Filter" Margin="10" IsVisible="{Binding #MenuToggle.IsChecked}"/>
					</StackPanel>
				</Grid>
			</SplitView.Pane>
			<Grid Background="Yellow" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

			</Grid>
				
		</SplitView>
	</Grid>

</UserControl>
